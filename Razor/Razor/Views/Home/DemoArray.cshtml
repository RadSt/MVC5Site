@using Razor.Models
@model  Product[]
@{
    ViewBag.Title = "DemoArray";
}

@if (Model.Length > 0)
{
    <table>
        <thead>
        <tr><td>Product</td><td>Price</td></tr>
        </thead>
        <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>$@p.Price</td>
            </tr>
        }
        </tbody>
    </table>
}
